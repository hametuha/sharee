{
	"name": "hametuha/sharee",
	"description": "Library to share revenue to users.",
	"type": "library",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"test": "phpunit",
		"lint": "phpcs --standard=phpcs.ruleset.xml $(find ./app -name '*.php')",
		"fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./app -name '*.php')",
		"i18n:pot": "vendor/bin/wp i18n make-pot ./ languages/sharee.pot --exclude=src,wordpress --domain=sharee",
		"i18n:po": "vendor/bin/wp i18n update-po languages/sharee.pot languages",
		"i18n:mo": "vendor/bin/wp i18n make-mo languages",
		"i18n:json": "vendor/bin/wp i18n make-json languages languages --no-purge",
		"i18n:update": [
			"@i18n:pot",
			"@i18n:po"
		],
		"i18n:compile": [
			"@i18n:mo",
			"@i18n:json"
		]
	},
	"authors": [
		{
			"name": "Hametuha INC",
			"email": "info@hametuha.co.jp"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.2",
		"hametuha/pattern": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9",
		"wp-coding-standards/wpcs": "~3.0",
		"yoast/phpunit-polyfills": "^4.0",
		"hametuha/hashboard": "^1.0.0",
		"fakerphp/faker": "^1.20.0",
		"wp-cli/i18n-command": "^2.6"
	},
	"autoload": {
		"psr-0": {
			"Hametuha\\Sharee": "app/"
		}
	},
	"autoload-dev": {
		"psr-0": {
			"Hametuha\\Sharee\\Tests": "tests/src"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
